{
  "name": "cvs-tsk-edh-dispatcher",
  "version": "0.0.1",
  "description": "Receives DynamoDB Streams destined for EDH and parcels them out to their respective SQS queues",
  "repository": "https://github.com/dvsa/cvs-tsk-edh-dispatcher",
  "main": "handler.js",
  "engines": {
    "node": "10.18.1",
    "npm": "5.6.0"
  },
  "scripts": {
    "start": "serverless invoke local -f main --path tests/resources/stream-event.json",
    "start:docker": "docker-compose -f docker-compose.yml up -d",
    "build": "node_modules/typescript/bin/tsc --rootDir ./ --outDir .build --sourceMap false && npm run build:copy",
    "build:dev": "node_modules/typescript/bin/tsc && npm run build:copy",
    "build:copy": "find src -type f \\( -name \"*.yml\" -or -name \"*.json\" -or -name \"*.yaml\" \\) | cpio -pdm .build && find tests -type f \\( -name \"*.yml\" -or -name \"*.json\" -or -name \"*.yaml\" \\)  | cpio -pdm .build",
    "build:docker": "docker-compose -f docker-compose.yml up -d --build",
    "test": "BRANCH=local SLS_DEBUG=* AWS_XRAY_CONTEXT_MISSING=LOG_ERROR jest --testMatch=\"**/*.unitTest.ts\"",
    "test-i": "BRANCH=local jest --testMatch=\"**/*.intTest.ts\" --runInBand --passWithNoTests",
    "tslint": "eslint .",
    "sonar-scanner": "npm run tslint && npm run coverage && sonar-scanner",
    "prepush": "npm run coverage",
    "security-checks": "git secrets --scan && git log -p | scanrepo",
    "coverage": "BRANCH=local SLS_DEBUG=* jest --testMatch=\"**/*.unitTest.ts\" --coverage",
    "audit-dep": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-",
    "package": "mkdir ${ZIP_NAME} && cp package.json package-lock.json ${ZIP_NAME}/ && cp -r .build/src/* ${ZIP_NAME}/ && cd ${ZIP_NAME} && npm ci --production && rm package.json package-lock.json && zip -qr ../${ZIP_NAME}.zip .",
    "tools-setup": "echo 'nothing'"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.846.0",
    "aws-xray-sdk": "^3.2.0",
    "js-yaml": "^4.0.0",
    "openapi-enforcer": "^1.13.3",
    "reflect-metadata": "^0.1.13",
    "template-file": "^5.1.0",
    "tslog": "^3.1.1"
  },
  "devDependencies": {
    "@dvsa/eslint-config-ts": "^2.0.0",
    "@types/aws-lambda": "^8.10.72",
    "@types/jest": "^26.0.20",
    "@types/jest-plugin-context": "^2.9.4",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^14.14.28",
    "audit-filter": "^0.5.0",
    "aws-lambda-mock-context": "^3.2.1",
    "eslint": "6",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jest-plugin-context": "^2.9.0",
    "jest-sonar-reporter": "^2.0.0",
    "serverless": "^2.25.1",
    "serverless-plugin-tracing": "^2.0.0",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^26.5.1",
    "ts-node-register": "^1.0.0",
    "typescript": "3"
  },
  "jestSonar": {
    "reportPath": ".reports",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "jest": {
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "testURL": "http://localhost"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run security-checks && npm run tslint && npm run build",
      "pre-push": "npm run prepush"
    }
  }
}
